<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/find"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/result"
        android:gravity="center"
        android:hint="찾으실 검색어를 입력하세요."
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/resulttitle"
        android:gravity="center"
        android:padding="4dp"
        android:text="노래 찾기"
        android:textStyle="bold"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/booking"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/resulttitle"
        android:gravity="center"
        android:text="검색 리스트"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/booking"
        android:layout_alignStart="@+id/booking"
        android:layout_below="@+id/booking"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookingcon1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/result"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="1. 임창정 - 흔한 사랑(MR 제거)"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookingcon2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/result"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="2. 임창정 - 흔한 사랑"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/warning"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="* 해당 리스트를 클릭하시면 추가됩니다."
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
